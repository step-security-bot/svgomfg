{
  "name": "svgomfg",
  "private": true,
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zkrew-red/svgomfg.git"
  },
  "keywords": [
    "svg",
    "svgo"
  ],
  "author": "ZKREW",
  "bugs": {
    "url": "https://github.com/zkrew-red/svgomfg/issues"
  },
  "homepage": "https://github.com/zkrew-red/svgomfg#readme",
  "engines": {
    "node": ">=14",
    "pnpm": ">=7"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-node-resolve": "14.1.0",
    "@rollup/plugin-replace": "^3.0.0",
    "gulp": "^4.0.2",
    "gulp-htmlmin": "^5.0.1",
    "gulp-nunjucks": "^5.1.0",
    "gulp-sass": "^5.0.0",
    "gulp-sourcemaps": "^3.0.0",
    "nanoevents": "^6.0.1",
    "pako": "^2.0.4",
    "prismjs": "^1.25.0",
    "rollup": "^2.57.0",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.42.1",
    "sirv-cli": "^1.0.14",
    "stylelint": "14.13.0",
    "stylelint-config-twbs-bootstrap": "6.0.0",
    "svgo": "^2.7.0",
    "xo": "^0.45.0"
  },
  "scripts": {
    "build": "gulp clean-build",
    "start": "sirv build --port 8080 --dev --no-clear",
    "dev": "gulp dev",
    "lint": "pnpm run lint:js && pnpm run lint:css",
    "lint:css": "stylelint src/css/ --rd --risd",
    "lint:js": "xo",
    "fix": "xo --fix",
    "test": "pnpm run lint && pnpm run build"
  },
  "prettier": {
    "bracketSpacing": true,
    "singleQuote": true
  },
  "xo": {
    "space": true,
    "prettier": true,
    "envs": [
      "browser"
    ],
    "rules": {
      "arrow-body-style": "off",
      "capitalized-comments": "off",
      "no-multi-assign": "off",
      "no-negated-condition": "off",
      "no-shadow": "error",
      "prefer-template": "error",
      "spaced-comment": "off",
      "unicorn/explicit-length-check": "off",
      "unicorn/no-unused-properties": "error",
      "unicorn/numeric-separators-style": "off",
      "unicorn/prefer-add-event-listener": "off",
      "unicorn/prefer-module": "off",
      "unicorn/prevent-abbreviations": "off",
      "unicorn/require-post-message-target-origin": "off"
    }
  }
}
